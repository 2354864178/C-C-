{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: make 生成活动文件",
            "command": "/usr/bin/make",     // 执行make命令
            "args": [
                "all"                       // 对应Makefile中的all目标（如果你的Makefile目标名不同，需修改）
            ],
            "options": {
                "cwd": "${workspaceFolder}" // 工作目录为项目根目录（Makefile所在位置）
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "执行Makefile编译所有文件"
        }
    ],
    "version": "2.0.0"
}